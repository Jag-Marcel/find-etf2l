{
  "manifest_version": 2,
  "name": "Find ETF2L",
  "version": "1.0",
  "description": "Simple extension to find the ETF2L profile of a linked Steam profile",

  "permissions": ["storage", "tabs"],

  "background": {
    "scripts": ["shared/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Open ETF2L Profile"
  },

  "content_scripts": [
    {
      "matches": [
        "https://steamcommunity.com/profiles/*",
        "https://steamcommunity.com/id/*"
      ],
      "js": ["shared/content_script.js"]
    }
  ],

  "options_ui": {
    "page": "shared/options.html",
    "open_in_tab": true
  }
}
